<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/soft_comment_title_content_windows"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@id/titlecon"
        android:layout_width="fill_parent"
        android:layout_height="48.0dip" >

        <ImageView
            android:id="@id/backimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:onClick="back"
            android:src="@drawable/back_button_xml" />

        <TextView
            android:id="@id/titleTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="85.0dip"
            android:layout_marginRight="85.0dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/registertxt"
            android:textColor="@color/grayslate"
            android:textSize="20.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/background" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@id/btn"
            style="@style/CustomBigOrangeButton"
            android:text="点击编辑头像" />

        <LinearLayout
            android:layout_width="160.0dip"
            android:layout_height="160.0dip"
            android:gravity="center"
            android:orientation="vertical" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@id/imageview"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:layout_centerInParent="true"
                android:src="@drawable/noavatar_small" />

            <ImageView
                android:id="@id/imageview2"
                android:layout_width="160.0dip"
                android:layout_height="160.0dip"
                android:layout_gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@id/btn_upload"
            style="@style/CustomBigLoginButton"
            android:text="上传头像" />
    </LinearLayout>

</LinearLayout>